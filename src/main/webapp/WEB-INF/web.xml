<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>

    <!-- ******************************************************************************************* -->
    <!-- SERVLET  -->
    <!-- ******************************************************************************************* -->
    <servlet>
        <servlet-name>RedirectServlet</servlet-name>
        <servlet-class>com.onquantum.taxi.RedirectServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>TestServlet</servlet-name>
        <servlet-class>com.onquantum.taxi.TestServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>PrimitiveServlet</servlet-name>
        <servlet-class>com.onquantum.taxi.PrimitiveServlet</servlet-class>
        <init-param>
            <param-name>adminEmail</param-name>
            <param-value>bushko1979@gmail.com</param-value>
        </init-param>
        <init-param>
            <param-name>adminContactNumber</param-name>
            <param-value>0976092995</param-value>
        </init-param>
    </servlet>

    <servlet>
        <servlet-name>RequestServlet</servlet-name>
        <servlet-class>com.onquantum.taxi.RequestServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ResponseServlet</servlet-name>
        <servlet-class>com.onquantum.taxi.ResponseServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>UserRegistrationServlet</servlet-name>
        <servlet-class>com.onquantum.taxi.UserRegistrationServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>UserLoginServlet</servlet-name>
        <servlet-class>com.onquantum.taxi.UserLoginServlet</servlet-class>
    </servlet>

    <!-- ******************************************************************************************* -->
    <!-- MAPPING  -->
    <!-- ******************************************************************************************* -->
    <servlet-mapping>
        <servlet-name>RedirectServlet</servlet-name>
        <url-pattern>/redirect</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>PrimitiveServlet</servlet-name>
        <url-pattern>/primitive</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RequestServlet</servlet-name>
        <url-pattern>/request</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ResponseServlet</servlet-name>
        <url-pattern>/response</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UserRegistrationServlet</servlet-name>
        <url-pattern>/reg</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UserLoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


    <!-- ******************************************************************************************* -->
    <!-- WELCOME -->
    <!-- ******************************************************************************************* -->
    <welcome-file-list>
        <welcome-file>login</welcome-file>
    </welcome-file-list>

</web-app>
